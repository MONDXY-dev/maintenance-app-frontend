const API_URL = import.meta.env.VITE_API_URL;

// Equipment API
export const equipmentAPI = {
  getAll: async () => {
    const response = await fetch(`${API_URL}/maintenance/equipment`);
    return response.json();
  },

  getById: async (id) => {
    const response = await fetch(`${API_URL}/maintenance/equipment/${id}`);
    return response.json();
  },

  getRecords: async (id) => {
    const response = await fetch(`${API_URL}/maintenance/equipment/${id}/records`);
    return response.json();
  }
};

// Maintenance Records API
export const maintenanceAPI = {
  getAll: async (status = null) => {
    const url = status 
      ? `${API_URL}/maintenance/records?status=${status}`
      : `${API_URL}/maintenance/records`;
    const response = await fetch(url);
    return response.json();
  },

  getById: async (id) => {
    const response = await fetch(`${API_URL}/maintenance/records/${id}`);
    return response.json();
  },

  create: async (data) => {
    const response = await fetch(`${API_URL}/maintenance/records`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    });
    return response.json();
  },

  update: async (id, data) => {
    const response = await fetch(`${API_URL}/maintenance/records/${id}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    });
    return response.json();
  },

  addComment: async (id, userId, comment) => {
    const response = await fetch(`${API_URL}/maintenance/records/${id}/comments`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ userId, comment }),
    });
    return response.json();
  },

  addPart: async (id, partData) => {
    const response = await fetch(`${API_URL}/maintenance/records/${id}/parts`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(partData),
    });
    return response.json();
  },

  delete: async (id) => {
    const response = await fetch(`${API_URL}/maintenance/records/${id}`, {
      method: 'DELETE',
    });
    return response.json();
  },

  // Status updates
  updateStatus: async (id, status, data) => {
    const response = await fetch(`${API_URL}/status/records/${id}/status`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        status,
        ...data
      }),
    });

    if (!response.ok) {
      const error = await response.json();
      throw new Error(error.error || 'Failed to update status');
    }

    return response.json();
  },

  updatePriority: async (id, priority, userId) => {
    const response = await fetch(`${API_URL}/status/records/${id}/priority`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ priority, userId }),
    });

    if (!response.ok) {
      const error = await response.json();
      throw new Error(error.error || 'Failed to update priority');
    }

    return response.json();
  },

  reassign: async (id, assignedTo, userId) => {
    const response = await fetch(`${API_URL}/status/records/${id}/assign`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ assignedTo, userId }),
    });

    if (!response.ok) {
      const error = await response.json();
      throw new Error(error.error || 'Failed to reassign');
    }

    return response.json();
  }
};
